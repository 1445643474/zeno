{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 16,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "basic",
      "displayName": "Basic configuration",
      "description": "Build without any dependencies",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "openvdb",
      "inherits": "basic",
      "displayName": "OpenVDB configuration",
      "description": "Additionally build the OpenVDB extensions",
      "cacheVariables": {
        "ZENO_PARALLEL_STL": "OFF",
        "ZENO_WITH_ZenoFX": "OFF",
        "ZENOFX_ENABLE_OPENVDB": "OFF",
        "ZENOFX_ENABLE_LBVH": "OFF",
        "ZENO_WITH_zenvdb": "OFF",
        "ZENO_WITH_FastFLIP": "OFF",
        "ZENO_WITH_Rigid": "OFF",
        "ZENO_WITH_oldzenbase": "OFF",
        "ZENO_WITH_Audio": "OFF",
        "ZENO_WITH_PBD": "OFF",
        "ZENO_WITH_SampleModel": "OFF",
        "ZENO_WITH_TOOL_FLIPtools": "OFF",
        "ZENO_WITH_TOOL_BulletTools": "OFF"
      }
    },
    {
      "name": "default",
      "inherits": "openvdb",
      "displayName": "Default configuration",
      "description": "Build all extension modules that are CPU-only",
      "cacheVariables": {
        "ZENO_WITH_FEM": "OFF",
        "ZENO_WITH_cgmesh": "OFF",
        "ZENO_WITH_TreeSketch": "OFF",
        "ZENO_WITH_Skinning": "OFF",
        "ZENO_WITH_Euler": "OFF",
        "ZENO_WITH_Functional": "OFF",
        "ZENO_WITH_LSystem": "OFF",
        "ZENO_WITH_mesher": "OFF",
        "ZENO_WITH_Alembic": "OFF",
        "ZENO_WITH_FBX": "OFF",
        "ZENO_WITH_DemBones": "OFF",
        "ZENO_WITH_MeshSubdiv": "OFF",
        "ZENO_WITH_CalcGeometryUV": "OFF",
        "ZENO_WITH_python": "ON",
        "ZENO_WITH_TOOL_cgmeshTools": "OFF",
        "ZENO_WITH_TOOL_HerculesTools": "OFF"
      }
    },
    {
      "name": "cuda",
      "inherits": "default",
      "displayName": "CUDA configuration",
      "description": "Additionally build with CUDA extension modules",
      "cacheVariables": {
        "ZENO_WITH_CUDA": "OFF",
        "ZENO_ENABLE_OPTIX": "OFF"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "basic",
      "configuration": "Release"
    }
  ]
}
